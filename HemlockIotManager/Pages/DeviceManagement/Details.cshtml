@page
@model HemlockIotManager.Pages.DeviceManagement.DetailsModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Device</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Device.OwnerID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Device.OwnerID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Device.DeviceType)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Device.DeviceType)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Device.IsActive)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Device.IsActive)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Device.DeviceName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Device.DeviceName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Device.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Device.Description)
        </dd>
    </dl>
</div>
<div>
    <a asp-page="./Edit" asp-route-id="@Model.Device.DeviceID">Edit</a> |
    <a asp-page="./Index">Back to List</a>
</div>

<!-- Location Query Panel -->
<div class="card mt-4">
    <div class="card-header">
        Location Query
    </div>
    <div class="card-body">
        <form method="get" action="/DeviceManagement/LogQuery">
            <input type="hidden" name="deviceId" value="@Model.Device.DeviceID" />
            <div class="form-group">
                <label for="startTime">Start Time:</label>
                <input type="datetime-local" class="form-control" id="startTime" name="startTime" required />
            </div>
            <div class="form-group">
                <label for="endTime">End Time:</label>
                <div class="input-group">
                    <input type="datetime-local" class="form-control" id="endTime" name="endTime" required />
                    <div class="input-group-append">
                        <button type="button" class="btn btn-outline-secondary" id="setNow">Now</button>
                    </div>
                </div>
            </div>
            <button type="submit" class="btn btn-primary">Query</button>
        </form>
    </div>
</div>

<script>
    document.getElementById('setNow').addEventListener('click', function () {
        var now = new Date();
        var year = now.getFullYear();
        var month = ('0' + (now.getMonth() + 1)).slice(-2); // Months are 0-based
        var day = ('0' + now.getDate()).slice(-2);
        var hours = ('0' + now.getHours()).slice(-2);
        var minutes = ('0' + now.getMinutes()).slice(-2);

        // Format the string as YYYY-MM-DDTHH:MM
        var dateTimeStr = year + '-' + month + '-' + day + 'T' + hours + ':' + minutes;

        document.getElementById('endTime').value = dateTimeStr;
    });
</script>